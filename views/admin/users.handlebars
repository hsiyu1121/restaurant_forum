<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Email</th>
      <th scope="col">Role</th>
      <th scope="col">#</th>
    </tr>
  </thead>
  <tbody>
    {{#each users}}
    <tr>
      <th scope="row">{{this.id}}</th>
      <td>{{this.email}}</td>
      {{#if this.isAdmin}}
      <td>admin</td>
      <td>
        <form action="/admin/users/{{this.id}}?_method=PUT" method="POST"
          onsubmit="return confirm('是否將{{this.email}}調整成user')">
          <button type="submit" class="btn btn-link" {{#ifCond this.email 'root@example.com'}} disabled {{/ifCond}}>
            set as user
          </button>
        </form>
      </td>
      {{else}}
      <td>user</td>
      <td>
        <form action="/admin/users/{{this.id}}?_method=PUT" method="POST"
          onsubmit="return confirm('是否將{{this.email}}調整成admin')">
          <button type="submit" class="btn btn-link">
            set as admin
          </button>
        </form>
      </td>
      {{/if}}
    </tr>
    {{/each}}
  </tbody>
</table>